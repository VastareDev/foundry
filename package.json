{
  "name": "@vastare/foundry",
  "version": "0.1.0",
  "description": "Framework agnostic design foundation for Vastare, tokens, resets, and element styling in TypeScript.",
  "author": "Vastare Development Team <support@vastare.co.uk>",
  "license": "ISC",
  "homepage": "https://github.com/VastareDev/foundry#readme",
  "bugs": {
    "url": "https://github.com/VastareDev/foundry/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VastareDev/foundry.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "style": "./dist/styles/main.css",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./elements/anchor": {
      "import": "./dist/elements/anchor/anchor.js",
      "types": "./dist/elements/anchor/anchor.d.ts"
    },
    "./elements/paragraph": {
      "import": "./dist/elements/paragraph/paragraph.js",
      "types": "./dist/elements/paragraph/paragraph.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build && npm run build:css && npm run build:types && npm run docs",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.json",
    "build:css": "npm run build:css:elements && npm run build:css:main && npm run build:css:foundry && npm run build:css:docs",
    "build:css:elements": "sass --style=compressed src/elements:dist/elements",
    "build:css:main": "sass --style=compressed src/scss/main.scss dist/css/main.css",
    "build:css:foundry": "sass --style=compressed src/scss/foundry.scss dist/css/foundry.css",
    "build:css:docs": "sass --style=compressed src/scss/docs.scss docs/public/css/docs.css",
    "docs": "npm run docs:build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "vite": "^7.2.2",
    "sass": "^1.93.3",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  },
  "publishConfig": {
    "access": "public"
  }
}

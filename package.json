{
  "name": "@vastare/foundry",
  "version": "0.1.0",
  "description": "Framework agnostic design foundation for Vastare, tokens, resets, and element styling in TypeScript.",
  "author": "Vastare Development Team <support@vastare.co.uk>",
  "license": "ISC",
  "homepage": "https://github.com/VastareDev/foundry#readme",
  "bugs": {
    "url": "https://github.com/VastareDev/foundry/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VastareDev/foundry.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "style": "/dist/styles/foundry.css",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./elements/anchor": {
      "import": "./dist/elements/anchor/anchor.js",
      "types": "./dist/elements/anchor/anchor.d.ts"
    },
    "./elements/paragraph": {
      "import": "./dist/elements/paragraph/paragraph.js",
      "types": "./dist/elements/paragraph/paragraph.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:js": "vite build",
    "build:css:elements": "sass --style=compressed src/elements:dist/elements",
    "build": "npm run build:js && npm run build:css:elements",
    "build:complete": "npm run typecheck && npm run test && npm run format && npm run lint && npm run build && npm run docs",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,scss,json,md}\"",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\" --fix",
    "lint:scripts": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "test": "npm run test:scripts",
    "test:scripts": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:ts": "typedoc",
    "docs:scss": "node build/scripts/extract-scss-docs.mjs",
    "docs": "npm run docs:ts && npm run docs:scss && npm run docs:build"
  },
  "devDependencies": {
    "vite": "^7.2.2",
    "sass": "^1.93.3",
    "typescript": "^5.9.3",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "eslint": "^9.39.1",
    "@typescript-eslint/parser": "^8.46.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-config-prettier": "10.1.8",
    "vitest": "^4.0.8",
    "@vitest/coverage-v8": "^4.0.8",
    "sass-true": "^9.0.0",
    "vitepress": "^1.6.4",
    "typedoc": "^0.28.14",
    "glob": "^11.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
